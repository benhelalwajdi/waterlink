{% extends 'base.html.twig' %}

{% block body %}
    <h1>Consommations list</h1>

    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Valeur</th>
                <th>Total</th>
                <th>Prix</th>
                <th>Idconsommation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for consommation in consommations %}
            <tr>
                <td><a href="{{ path('consommation_show', { 'idConsommation': consommation.idConsommation }) }}">{{ consommation.date }}</a></td>
                <td>{{ consommation.valeur }}</td>
                <td>{{ consommation.total }}</td>
                <td>{{ consommation.prix }}</td>
                <td>{{ consommation.idConsommation }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('consommation_show', { 'idConsommation': consommation.idConsommation }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('consommation_edit', { 'idConsommation': consommation.idConsommation }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('consommation_new') }}">Create a new consommation</a>
        </li>
    </ul>
{% endblock %}
