{% extends 'base.html.twig' %}

{% block body %}
    <h1>Consommation</h1>

    <table>
        <tbody>
            <tr>
                <th>Date</th>
                <td>{% if consommation.date %}{{ consommation.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Valeur</th>
                <td>{{ consommation.valeur }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ consommation.total }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ consommation.prix }}</td>
            </tr>
            <tr>
                <th>Idconsommation</th>
                <td>{{ consommation.idConsommation }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('consommation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('consommation_edit', { 'idConsommation': consommation.idConsommation }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
